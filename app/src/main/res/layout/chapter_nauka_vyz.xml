<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textChapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNaukaVyzText"
        android:textSize="@dimen/text_size_book_chapter_title_text"
        android:letterSpacing="0.02"
        android:justificationMode="inter_word"
        android:text="To be overwritten from java code" >
    </TextView>

    <TextView
        android:id="@+id/textChapterContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorNaukaVyzText"
        android:textSize="@dimen/text_size_book_chapter_content_text"
        android:letterSpacing="0.02"
        android:justificationMode="inter_word"
        android:text="To be overwritten from java code" >
    </TextView>

</LinearLayout>
