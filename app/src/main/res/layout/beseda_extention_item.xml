<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutExtention"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageBesedaExtention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"/>

    <com.grigorov.asparuh.probujdane.besedaTextView
        android:id="@+id/textBesedaExtention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBesedaTextText"
        android:textSize="@dimen/text_size_beseda_text"
        android:letterSpacing="0.02"
        android:text="To be overwritten from java code" >
    </com.grigorov.asparuh.probujdane.besedaTextView>

</LinearLayout>