<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMainBackground"
    android:layout_weight="24">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorMain" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorMain"
        android:clickable="true">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textCreateNewPlaylist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:textColor="@color/colorMainText"
            android:textSize="@dimen/text_size_list_song_name"
            android:text="@string/music_create_playlist_string"
            android:onClick="onCreateNewPlaylistPressed" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/textPlaylistPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/add2_playlist"
            android:layout_weight="2"
            android:onClick="onCreateNewPlaylistPressed" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorMain" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0"
        android:background="@color/colorMainBackground" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/colorMainBackground"
        android:clickable="true">

        <ListView
            android:id="@+id/listViewMusicPlaylists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorMainBackground"
            android:background="@color/colorMainBackground"
            android:dividerHeight="@dimen/list_music_playlists_divider_hight"
            />

    </LinearLayout>

</LinearLayout>
